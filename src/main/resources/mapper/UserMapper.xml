<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dudu.dao.UserMapper">
  <resultMap id="baseResultMap" type="com.dudu.domain.User">
    <id column="id" property="id" jdbcType="BIGINT"  />
    <result column="username" property="username" jdbcType="VARCHAR"/>
    <result column="password" property="password" jdbcType="VARCHAR"/>
  </resultMap>

  <resultMap id="baseResultMapWithoutPassword" type="com.dudu.domain.User">
    <id column="id" property="id" jdbcType="BIGINT"  />
    <result column="username" property="username" jdbcType="VARCHAR"/>
  </resultMap>

  <sql id="baseColumnList" >
    id, username, password
  </sql>

  <sql id="baseColumnListWithoutPassword">
    id, username
  </sql>

  <select id="queryUserByNameAndPwd"  resultMap="baseResultMap" parameterType="java.lang.String">
    SELECT
    <include refid="baseColumnList" />
    FROM user
    WHERE username = #{username}
    and password = #{password}
  </select>

  <select id="getUserById" resultMap="baseResultMap" parameterType="java.lang.Integer">
    SELECT
    <include refid="baseColumnList" />
    FROM user
    WHERE id = #{id}
  </select>

  <select id="queryUserList" resultMap="baseResultMapWithoutPassword" parameterType="java.lang.String">
    SELECT
    <include refid="baseColumnListWithoutPassword" />
    FROM user
    WHERE
    1 = 1
    <if test="username!= null and username !=''">
      AND username like CONCAT(CONCAT('%',#{username,jdbcType=VARCHAR}),'%')
    </if>
    ORDER BY id DESC
   </select>

  <insert id="addUser" parameterType="com.dudu.domain.User" >
    INSERT INTO user(id, username, password) VALUES (#{id}, #{username}, #{username})
  </insert>

  <update id="updateUser" parameterType="com.dudu.domain.User">
    UPDATE user SET username = #{username}
    <if test="password != null and password != ''">
      , password = #{password}
    </if>
    WHERE id = #{id}
  </update>

  <update id="resetUserPassword" parameterType="com.dudu.domain.User">
    UPDATE user SET password = username
    WHERE id = #{id}
  </update>

  <delete id="deleteUser" parameterType="java.lang.Integer">
    DELETE FROM user WHERE id IN
    <foreach item="id" collection="ids" open="(" separator="," close=")">
      #{id}
    </foreach>
  </delete>
</mapper>